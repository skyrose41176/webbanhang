@{
    ViewData["Title"] = "Wish List";
}
 <!-- Begin Li's Breadcrumb Area -->
            <div class="breadcrumb-area">
                <div class="container">
                    <div class="breadcrumb-content">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="active">@ViewData["Title"]</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Li's Breadcrumb Area End Here -->
            <!--Wishlist Area Strat-->
            <div class="wishlist-area pt-60 pb-60">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <form action="#">
                                <div class="table-content table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="li-product-remove"></th>
                                                <th class="li-product-thumbnail">images</th>
                                                <th class="cart-product-name">Product</th>
                                                <th class="li-product-price">Unit Price</th>
                                                <th class="li-product-add-cart">add to cart</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.wish)
                                            {
                                            <tr>
                                                <td class="li-product-remove"><a asp-action="removewish" asp-route-id="@item.Product.Id"><i class="fa fa-times"></i></a></td>
                                                <td class="li-product-thumbnail"><a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.Id"><img src="~/images/product/large-size/ALL/@item.Product.Image" alt=""></a></td>
                                                <td class="li-product-name"><a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.Id">@item.Product.Productname</a></td>
                                                <td class="li-product-price"><span class="amount">@string.Format("{0:N0}",@item.Product.Price)VNĐ</span></td>
                                                <td class="li-product-add-cart"><a  asp-action="AddtoCart" asp-route-id="@item.Product.Id" >add to cart</a></td>
                                            </tr>
                                            }
                                            @foreach (var item in ViewBag.wishcombo)
                                            {
                                            <tr>
                                                <td class="li-product-remove"><a asp-controller="Combo" asp-action="Removewish" asp-route-id="@item.Combo.Id"><i class="fa fa-times"></i></a></td>
                                                <td class="li-product-thumbnail"><a asp-controller="Combo" asp-action="Details" asp-route-id="@item.Combo.Id"><img src="~/images/product/large-size/Combo/@item.Combo.Image" alt=""></a></td>
                                                <td class="li-product-name"><a asp-controller="Combo" asp-action="Details" asp-route-id="@item.Combo.Id">@item.Combo.ComboName</a></td>
                                                <td class="li-product-price"><span class="amount">@string.Format("{0:N0}",@item.Combo.Total)VNĐ</span></td>
                                                <td class="li-product-add-cart"><a asp-controller="Combo" asp-action="AddtoCart" asp-route-id="@item.Combo.Id" >add to cart</a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--Wishlist Area End-->
